<%= render 'shared/sidenav_user' %>

<div class="suppliers-report-all">
  <div class="title-index">
    <i class="fas fa-cubes fa-2x" aria-hidden="true"></i>
    <h2>Produtos</h2>
  </div>
  <table>
    <thead>
      <tr>
        <th>Nome</th>
        <th>Sku</th>
        <th>Descrição</th>
        <th>Fornecedor</th>
        <th>Preço</th>
      </tr>
    </thead>

    <tbody>
      <% @products.each do |s| %>
        <tr>
          <td><%= s.name %></td>
          <td><%= s.sku %></td>
          <td><%= s.description %></td>
          <td><%= s.supplier_id %></td>

          <% s.price_lists.each do |price_list| %>
            <td><%= number_to_currency(price_list.price, unit: "R$", separator: ",", delimiter: ".", format: "%u %n") %></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%= paginate @products %>
  <div class="download-pdf">
    <%= link_to 'Download', '/products.pdf', target: :blank %>
    <i class="fa fa-file-pdf"></i>
  </div>
</div>
