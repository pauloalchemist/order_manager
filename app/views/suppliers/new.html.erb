<%= render 'shared/sidenav_user' %>
<%= form_with model: @supplier, url: suppliers_url do |f| %>
  <main class="logon-main">
    <%= render 'shared/suppliers_errors/error_cnpj' %>
    <div class="logon-box">
      <%= render "shared/logo" %>
      <%= render "shared/alert" %>
      <h2>Cadastrar fornecedor</h2>
      <div class="textbox">
        <i class="far fa-user" aria-hidden="true"></i>
        <%= f.label :razão_social %><br>
        <%= f.text_field :corporate_name, autofocus: true %>
      </div>

      <div class="textbox">
        <i class="far fa-user" aria-hidden="true"></i>
        <%= f.label :nome_fantasia %><br>
        <%= f.text_field :fantasy_name %>
      </div>

      <div class="textbox">
        <i class="fas fa-envelope" aria-hidden="true"></i>
        <%= f.label :cnpj %><br>
        <%= f.text_field :cnpj %>
      </div>

      <%= f.fields_for :supplier_addresses do |sa_f| %>
        <div class="textbox">
          <%= sa_f.label :endereço %><br>
          <%= sa_f.text_field :address %>
        </div>
        <div class="textbox">
          <%= sa_f.label :número %><br>
          <%= sa_f.text_field :number %>
        </div>
        <div class="textbox">
          <%= sa_f.label :bairro %><br>
          <%= sa_f.text_field :district %>
        </div>
        <div class="textbox">
          <%= sa_f.label :cidade %><br>
          <%= sa_f.collection_select :cities_id, City.order(:name), :id, :name %>
        </div>
        <div class="textbox">
          <%= sa_f.label :estado %><br>
          <%= sa_f.collection_select :states_id, State.order(:name), :id, :name %>
        </div>
        <div class="textbox">
          <%= sa_f.label :Cep %><br>
          <%= sa_f.text_field :zipcode %>
        </div>
      <% end %>

      <button class="btn-logon">
        <%= f.submit "Cadastrar" %>
      </button>
    </div>
  </main>
<% end %>
